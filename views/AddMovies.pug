head
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
  link(rel='stylesheet' type='text/css' href='css/AddMovies.css')
  script(src='https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')
#registrationDiv
  h2 Add Movie
  form#registerForm(action='/movie-addition' method='POST' name='addMovie' onsubmit='return validateForm()')
    .textBoxHeaderDiv
      label#usernameFormText.textBoxHeader(for='movieName') Movie Name
      br
    input#usernameTextBox.textBox(type='text' name='movieName' required='')
    br
    .textBoxHeaderDiv
      label#passwordFormText.textBoxHeader(for='releaseYear') Release Year
      br
    input#passwordTextBox.textBox(type='number' min='1900' max='2050' name='releaseYear' required='')
    br
    .textBoxHeaderDiv
      label#passwordConfirmFormText.textBoxHeader(for='description') Description
      br
    textarea#passwordConfirmTextBox.descriptionTextBox(name='description' rows='4' cols='50' required='')
    br
    .textBoxHeaderDiv
      label#passwordConfirmFormText.textBoxHeader(for='movieImageName') Movie Image Name
      br
    input#passwordConfirmTextBox.textBox(type='text' name='movieImageName' required='')
    br
    .textBoxHeaderDiv
      label#passwordConfirmFormText.textBoxHeader(for='ratings') Rating
      br
    select#ratings(name='rating')
        option(value='G') None
        option(value='G') G
        option(value='PG') PG
        option(value='PG-13') PG-13
        option(value='R') R
        option(value='NC-17') NC-17
    br
    .textBoxHeaderDiv
      label#passwordConfirmFormText.textBoxHeader(for='runtime') Runtime (in mins)
      br
    input#passwordConfirmTextBox.textBox(type='number' min='1' max='500' name='runtime' required='')
    br
    .textBoxHeaderDiv
      label#passwordConfirmFormText.textBoxHeader(for='category') Category (Hold CTRL to add multiple)
      br
    select#categories(name='category' multiple)
        option(value='None') None
        option(value='Action') Action
        option(value='Adventure') Adventure
        option(value='Animation') Animation
        option(value='Comedy') Comedy
        option(value='Drama') Drama
        option(value='Fantasy') Fantasy
        option(value='Historical') Historical
        option(value='Horror') Horror
        option(value='Mystery') Mystery
        option(value='Romance') Romance
        option(value='Sci-Fi') Sci-Fi
        option(value='Thriller') Thriller
        option(value='Western') Western
    br
    br
    #buttonArea
      input.button(type='submit' value='Submit Movie')
- const myClasses = [alertShow, "alert", "alert-danger", "alert-dismissible", "fade"]
#alertBox(class=myClasses role='alert')
  strong Registration Failed!
  |  #{message}
  button.close(type='button' data-dismiss='alert' aria-label='Close')
    span(aria-hidden='true') &times;
