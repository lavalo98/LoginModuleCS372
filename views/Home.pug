doctype html
include navBar.pug
html
  head
    link(rel='stylesheet' type='text/css' href='css/Home.css')
    
  body.background
    +navBarSend(username)
    .grid
        for movie, i in movieNameArray
            a(href= "show-movie?" + movie)
                div#movieData(style= "background: url(images/" + movieImageArray[i] + "); background-repeat: no-repeat; background-size: cover;")
                    div #{movie + " (" + releaseYearArray[i] + ")"}
  include footer.pug
