head
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
  link(rel='stylesheet' type='text/css' href='css/LoginPage.css')
  script(src='https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')
  script.
    function submitLogin(obj){
    if(validateForm()){
    document.getElementById('loginForm').action = '/'
    document.getElementById('loginForm').submit();
    }
    }
    function submitRegistration(obj){
    document.getElementById('loginForm').action = '/register'
    document.getElementById('loginForm').submit();
    }
    function togglePassword() {
    // toggle the type attribute
    var x = document.getElementById("passwordTextBox");
    if (x.type === "password") {
    x.type = "text";
    } else {
    x.type = "password";
    }
    }
    function validateForm() {
    var usernameField = document.forms["loginForm"]["username"].value;
    var passwordField = document.forms["loginForm"]["password"].value;
    if (usernameField == "" || passwordField == "") {
    return false;
    }else{
    return true;
    }
    }
#loginDiv
  h2 Login Module
  form#loginForm(action='' method='POST' name='loginForm')

    .textBoxHeaderDiv
      label#emailFormText.textBoxHeader(for='email') Email
      br
    input#emailTextBox.textBox(type='text' name='Email')
    br

    .textBoxHeaderDiv
      label#usernameFormText.textBoxHeader(for='username') Username
      br
    input#usernameTextBox.textBox(type='text' name='username' required='')
    br

    .textBoxHeaderDiv
      label#passwordFormText.textBoxHeader(for='password') Password
      br
    input#passwordTextBox.textBox(type='password' name='password' required='')
    br

    .textBoxHeaderDiv
      input(type='checkbox' onclick='togglePassword()')
      |  Show Password
    br
    #buttonArea
      input.button(onclick='submitRegistration(this)' type='button' value='Register')
      input.button(onclick='submitLogin(this)' type='submit' value='Login')
- const myClasses = [alertShow, "alert", "alert-danger", "alert-dismissible", "fade"]
#alertBox(class=myClasses role='alert')
  strong #{header}
  |  #{message}
  button.close(type='button' data-dismiss='alert' aria-label='Close')
    span(aria-hidden='true') &times;
