mixin navBarSend(user)
    head
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
        script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')
        style.
            .customButtonText{
                color: white;
            }
            #username{
                color: white;
                padding-right: 30px;
            }
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            a.navbar-brand(href='#') Mock Netflix Site CS372
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item.active
                        a.nav-link(href='#')
                            | Home 
                            span.sr-only (current)
                    li.nav-item.dropdown
                        a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                            | Category
                        .dropdown-menu(aria-labelledby='navbarDropdown')
                            a.dropdown-item(href='#') Action
                            a.dropdown-item(href='#') Adventure
                            a.dropdown-item(href='#') Animation
                            a.dropdown-item(href='#') Comedy
                            a.dropdown-item(href='#') Drama
                            a.dropdown-item(href='#') Fantasy
                            a.dropdown-item(href='#') Historical
                            a.dropdown-item(href='#') Horror
                            a.dropdown-item(href='#') Mystery
                            a.dropdown-item(href='#') Romance
                            a.dropdown-item(href='#') Sci-Fi
                            a.dropdown-item(href='#') Thriller
                            a.dropdown-item(href='#') Western
                form.form-inline.my-2.my-lg-0
                    h3#username.my-2.my-sm-0 User: #{username}
                    input.form-control.mr-sm-2(type='search' placeholder='Search' aria-label='Search')
                    button.btn.btn-outline-primary.my-2.my-sm-0.customButtonText(type='submit') Search
