  script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
  link(rel='stylesheet' type='text/css' href='css/RegisterPage.css')
  script(src='https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')
  script.
    function togglePassword() {
    // toggle the type attribute
    var x = document.getElementById("passwordTextBox");
    if (x.type === "password") {
    x.type = "text";
    } else {
    x.type = "password";
    }
    }
    function toggleConfirmPassword() {
    // toggle the type attribute
    var x = document.getElementById("passwordConfirmTextBox");
    if (x.type === "password") {
    x.type = "text";
    } else {
    x.type = "password";
    }
    }
    function validateForm() {
    var usernameField = document.forms["registrationForm"]["username"].value;
    var passwordField = document.forms["registrationForm"]["password"].value;
    var passwordConfirmField = document.forms["registrationForm"]["passwordConfirm"].value;
    if (usernameField == "" || passwordField == "" || passwordConfirmField == "") {
    return false;
    }else{
    return true;
    }
    }
#registrationDiv
  h2 Registration
  form#registerForm(action='/registration-confirmation' method='POST' name='registrationForm' onsubmit='return validateForm()')

    .textBoxHeaderDiv
      label#emailFormText.textBoxHeader(for='email') Email
      br
    input#emailTextBox.textBox(type='text' name='email')
    br

    .textBoxHeaderDiv
      label#usernameFormText.textBoxHeader(for='username') Username
      br
    input#usernameTextBox.textBox(type='text' name='username' required='')
    br

    .textBoxHeaderDiv
      label#passwordFormText.textBoxHeader(for='password') Password
      br
    input#passwordTextBox.textBox(type='password' name='password' required='')
    br

    .textBoxHeaderDiv
      label#passwordConfirmFormText.textBoxHeader(for='passwordConfirm') Confirm Password
      br
    input#passwordConfirmTextBox.textBox(type='password' name='passwordConfirm' required='')
    br

    .textBoxHeaderDiv
      input(type='checkbox' onclick='togglePassword(),toggleConfirmPassword()')
      | Show Password
    br

    #buttonArea
      input.button(type='submit' value='Confirm')
- const myClasses = [alertShow, "alert", "alert-danger", "alert-dismissible", "fade"]
#alertBox(class=myClasses role='alert')
  strong Registration Failed!
  |  #{message}
  button.close(type='button' data-dismiss='alert' aria-label='Close')
    span(aria-hidden='true') &times;
